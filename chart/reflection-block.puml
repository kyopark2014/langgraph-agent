UpdateRelStyle($lineColor=$COLOR_REL_LINE, $textColor=$COLOR_REL_TEXT)

LAYOUT_WITH_LEGEND()

System(start, "START")

Container(generate, "generate")

Container(reflect, "reflect")

Boundary(c1, "should_continue") {
    SystemQueue_Ext(iternation, "length>6")
}
    
System(END, "END")    

Rel(start, generate, "input")

Rel(iternation, reflect, "no")

Rel(iternation, END, "yes")

Rel(generate, iternation, "generation")


Rel(reflect, generate, "reflection")
